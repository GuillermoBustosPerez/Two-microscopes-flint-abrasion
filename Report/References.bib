	file = {Bustos-Pérez et al. - 2019 - An Experimental Approach to Degrees of Rounding Am.pdf:C\:\\Users\\guillermo_bustos_perez\\Zotero\\storage\\83F3HLDP\\Bustos-Pérez et al. - 2019 - An Experimental Approach to Degrees of Rounding Am.pdf:application/pdf},
